---
import { Image } from "astro:assets";
import LogoImage from "@/assets/avatar.jpg";
import { useTranslations } from "@/i18n";

const t = useTranslations();
---

<Image
  src={LogoImage}
  alt={t("siteMetadata.title")}
  widths={[80, 160]}
  sizes={`(max-width: 640px) 80px, 160px`}
  loading="eager"
/>
